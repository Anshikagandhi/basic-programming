#include <iostream>
using namespace std;

int main() {
    int n;
int i=1;

	cin>>n;
	while(i<=n)

    {
    //initialising count as 1 
      int count=1;
 
    // printing spaces
      while(count<=n-i)
      {
        cout<<" ";
        count=count+1;

      }
      count=1;
      int val=i;

    while(count<=i)
    {
      cout<<val;
      val=val+1;
      count=count+1;
    }
    count=1;
      val=2*(i-1);
      while(count<=i-1)
      {
        cout<<val;
        val=val-1;
        count=count+1;
      }
      i=i+1;
      cout<<endl;
    }
}

