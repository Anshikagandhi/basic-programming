#include<iostream>
using namespace std;


int main(){
 int n,i=1;
 cin>>n;

 while(i<=n)
    {
        int count=1;

        while(count<=n-i)
            {
            cout<<" ";
         count=count+1;
         }
         count=1;
         while(count<=2*i-1)
         {
             cout<<"*";
             count=count+1;
         }

    i=i+1;
    cout<<endl;}
}
